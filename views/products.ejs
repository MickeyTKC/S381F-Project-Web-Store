<html lang="en">
  <head>
    <title>Product Display</title>
    <%- include('../views/components/head.ejs'); %>
    <style>
      .product-card {
        margin-bottom: 20px;
      }
      .product-card .card-img-top {
        object-fit: cover;
        height: 200px;
      }
      .empty-message {
        text-align: center;
        margin-top: 50px;
      }
    </style>
    <% const { user={} ,authenticated } = auth %>
  </head>
  <body>
    <%- include('../views/components/navbar',{auth:auth}); %>
    <div class="container">
      <div class="py-3">
        <h1>Product Display</h1>
        <hr />
      </div>

      <div class="row">
        <!-- Assuming your JSON data is stored in a variable named 'products' -->
        <% if(!products){%>
        <h1>Empty</h1>
        <%}%> <% if(products){%> <% for (product of products) {%>
        <div class="col-md-4">
          <div class="card product-card">
            <img
              src="<%= product.img %>"
              class="card-img-top"
              alt="Product Image"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">Price: $<%= product.price %></p>
              <% product.tags = product.tags || [] %>
              <p class="card-text">
                Tags: <%for(tag of product.tags) {%>
                <button class="btn btn-sm btn-warning">#<%=tag%></button>
                <%}%>
              </p>

              <a
                href="/product/id/<%=product.productId%>"
                class="btn btn-primary"
                class="btn btn-primary"
              >
                View Details
              </a>
            </div>
          </div>
        </div>
        <% } %> <%}else{%>
        <div class="col-md-12">
          <p class="empty-message">No products available.</p>
        </div>
        <%}%>
      </div>
    </div>
    <%- include('../views/components/foot',{auth:auth}); %>
  </body>
</html>
