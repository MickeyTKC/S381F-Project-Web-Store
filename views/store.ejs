<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>Store Information</title>
    <%- include('../views/components/head.ejs'); %>
  </head>

  <body>
    <%- include('../views/components/navbar.ejs'); %>
    <div class="container">
      <div class="py-3">
        <h4 class="display-3" style="text-align: center"><%= store.name %></h4>
      </div>
      <hr />
      <p><%= store.info %></p>
      <div class="py-5"></div>
      <img
        src="https://live.staticflickr.com/7047/6815490346_9c7d3773ce_b.jpg"
        class="img-fluid"
        alt="Store Logo"
      />

      <h4>Address:</h4>
      <p><%= store.address %></p>
      <hr />
      <p><%= store.address %></p>
      <% const displayEdit = user.role || "client" %>
      <%if(displayEdit != "client") {%>
      <div class="fixed-bottom p-5 text-right">
        <a class="btn btn-light border-dark" href="/store/edit">Edit</a>
      </div>
      <%}%>
    </div>

    <%- include('../views/components/foot.ejs'); %>
  </body>
</html>
